@model DVPRO.DATA.EF.Models.Order

@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center">Orders</h1>

<h4 class="text-center">Create Order</h4>
<hr />
<div class="row">
    <div class="offset-4 col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Ponumber" class="control-label"></label>
                    <input asp-for="Ponumber" class="form-control" />
                    <span asp-validation-for="Ponumber" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="VendorId" class="control-label"></label>
                    <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="OrderDate" class="control-label"></label>
                    <input asp-for="OrderDate" type="date" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="OrderTotal" class="control-label"></label>
                    <input asp-for="OrderTotal" class="form-control" />
                    <span asp-validation-for="OrderTotal" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary offset-1">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
