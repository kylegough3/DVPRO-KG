@model DVPRO.DATA.EF.Models.Location

@{
	ViewData["Title"] = "Location";
}

<h1 class="text-center">Location</h1>

<h4 class="text-center">Create Location</h4>
<hr />
<div class="row">
	<div class="offset-4 col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="form-group col-6">
					<label asp-for="LocationAddress" class="control-label"></label>
					<input asp-for="LocationAddress" class="form-control" />
					<span asp-validation-for="LocationAddress" class="text-danger"></span>
				</div>
				<div class="form-group col-6">
					<label asp-for="LocationCity" class="control-label"></label>
					<input asp-for="LocationCity" class="form-control" />
					<span asp-validation-for="LocationCity" class="text-danger"></span>
				</div>

			</div>
			<div class="row">
				<div class="form-group col-2">
					<label asp-for="LocationState" class="control-label"></label>
					<input asp-for="LocationState" class="form-control" />
					<span asp-validation-for="LocationState" class="text-danger"></span>
				</div>
				<div class="form-group col-3">
					<label asp-for="LocationPostalCode" class="control-label"></label>
					<input asp-for="LocationPostalCode" class="form-control" />
					<span asp-validation-for="LocationPostalCode" class="text-danger"></span>
				</div>
				<div class="form-group col-4">
					<label asp-for="CountryId" class="control-label"></label>
					<select asp-for="CountryId" class="form-control mt-2" asp-items="ViewBag.CountryId"></select>
				</div>
			</div>
			<div class="row mt-2">
				<div class="form-group text-center">
					<input type="submit" value="Create" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-primary offset-1">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
