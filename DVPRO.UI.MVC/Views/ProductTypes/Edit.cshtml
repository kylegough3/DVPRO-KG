@model DVPRO.DATA.EF.Models.ProductType

@{
    ViewData["Title"] = "Edit";
}

<h1>Product Type</h1>

<h4>Edit Product Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductTypeId" />
            <div class="form-group">
                <label asp-for="ProductTypeName" class="control-label"></label>
                <input asp-for="ProductTypeName" class="form-control" />
                <span asp-validation-for="ProductTypeName" class="text-danger"></span>
            </div>
            <div class="row mt-2">
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-primary offset-1" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
