@model DVPRO.DATA.EF.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Country</h1>

<h4>Create Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class ="form-control" asp-items="ViewBag.RegionId"></select>
            </div>

            <div class="row mt-2">
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-primary offset-1" asp-action="Index">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
