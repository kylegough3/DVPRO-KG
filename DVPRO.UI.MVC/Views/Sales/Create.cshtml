@model DVPRO.DATA.EF.Models.Sale

@{
    ViewData["Title"] = "Sale";
}

<h1>Create</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class=" offset-4 col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-5">
                    <label asp-for="SaleDate" class="control-label"></label>
                    <input asp-for="SaleDate" class="form-control" />
                    <span asp-validation-for="SaleDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="SalespersonId" class="control-label">Sales Person</label>
                    <select asp-for="SalespersonId" class ="form-control" asp-items="ViewBag.SalespersonId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer Name</label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SaleTotal" class="control-label">Sale Total($)</label>
                <input asp-for="SaleTotal" class="form-control" />
                <span asp-validation-for="SaleTotal" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>*@
            <div class="form-group text-center mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
